
<%- include('../partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/home.css">
</head>
<body>
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-4">Welcome to Our <span class="text-highlight">Community</span></h1>
                    <p class="lead mb-4">Connect, Participate, and Thrive with like-minded individuals. Join our events and activities to make lasting connections and create positive change.</p>
                    <div class="d-flex gap-3">
                        <a href="/events" class="btn btn-primary btn-lg">Explore Events</a>
                    </div>
                </div>
                
            </div>
        </div>
    </section>

    <section class="testimonial-section">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-8">
                    <div class="testimonial-wrapper">
                        <div class="quote-icon">
                            <i class="bi bi-quote"></i>
                        </div>
                        <h1 class="testimonial">Testimonials</h1>
                        <div class="testimonial-author">
                            <h5>Sarah Johnson</h5>
                            <p>Community Member since 2023</p>
                            <p class="testimonial-text">Being part of this community has transformed my life. I've made amazing connections, learned new skills, and found opportunities to make a real difference.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="cta-section">
        <div class="container">
            <div class="cta-wrapper">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h2>Ready to join our community?</h2>
                        <p>Sign up today and start connecting with like-minded individuals.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<%- include('../partials/footer') %>