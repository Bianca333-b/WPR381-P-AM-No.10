            <li>
              <a href="/community-portal-prefilled/views/pages/home.ejs">Home</a>
            </li>
            <li>
              <a href="/community-portal-prefilled/views/pages/about">About</a>
            </li>
            <li>
              <a href="/community-portal-prefilled/views/pages/events">Events</a>
            </li>
            <li>
              <a href="/community-portal-prefilled/views/pages/contact">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
